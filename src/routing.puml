@startuml
!include incl/skin.puml
hide << Entity >> circle
hide << Association >> circle

title Routing\n

interface RouterStrategy {
    parse(&input): void
}

class CliRouting implements RouterStrategy
class ApiRouting implements RouterStrategy
class LegacyRouting implements RouterStrategy
class DefaultRouting implements RouterStrategy
abstract class NotFoundError implements RouterStrategy
class CommandNotFoundError extends NotFoundError
class ResourceNotFoundError extends NotFoundError

interface UrlBuilder {
    build(vars): string
}

package SeoComponent {
    class SeoUrl << Entity >> {
        PK string url
        string entity_name
        FK entity_id
        string view
    }
    class SeoRouting implements RouterStrategy, UrlBuilder {
        build([entity_name, entity_id, view=default]): string
        parse(&input): void
    }
}
@enduml
